<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css"/>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script src="/scripts/userQuiz.js"></script>
</head>

<body>
<%- include('partials/_header') %>
  <div class="userQuizContainer">
    <h1><%= quizName %></h1>
    <form action='' method="POST">
    <ol>
    <% for (let question in questions) { %>
      <div class="userQuestionContainer">
        <li><%= question %></li>
      </div>
      <ol type="A">
      <% for (let answer of answers[question]) { %>
          <div class="userAnswerContainer">
            <li>
              <input type="radio" name="question_<%= answer.id %>" value="<%=answer.answer_id%>">
              <span><%= answer.acontent %></span>
            </li>
          </div>
      <% } %>
      </ol>
    <% }; %>
    </ol>
      <div id="userResult"></div>
      <button id="userSubmitButton" type="Submit">Submit</button>
    </form>
  </div>
</body>
</html>
