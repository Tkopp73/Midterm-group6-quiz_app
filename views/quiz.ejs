<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Quiz Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/quiz.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/api-quiz.js"></script>
</head>
<body>
  <%- include('partials/_header') %>
  <div class="quizContainer">
    <article class="eachQuestionContainer">
      <ol>
      <% for(let question of questions){ %>
        <div class="questionContainer">
          <li><%= question.question %></li>
          <div class="answersContainer">
            <ol type="A">
              <li><button value="wrong" class="answers"><%= question.incorrectAnswers[0] %></button></li>
              <li><button value="wrong" class="answers"><%= question.incorrectAnswers[1] %></button></li>
              <li><button value="right" class="answers"><%= question.correctAnswer %></button></li>
              <li><button value="wrong" class="answers"><%= question.incorrectAnswers[2] %></button></li>
            </ol>
          </div>
        </div>
          <% } %>
        </ol>
      </article>
    </div>
    <form >
      <div id="result" action="" method=""></div>
      <button id="submitButton" type="submit">Submit</button>
    </form>
  </body>
</html>



