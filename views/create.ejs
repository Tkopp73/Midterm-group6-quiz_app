<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create Quiz</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css"/>
  <link rel="stylesheet" href="/styles/create.css"/>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <div class="createQuizContainer">
    <h1>Create Quiz</h1>
    <form method="POST" action="/create">
      <div class="quizTitleContainer">
        <label>Title of the Quiz:</label>
        <input type="text" name="quiz_title" placeholder="Title of the Quiz">
      </div>
        <% for (let i = 1; i <= 10; i++ ) {%>
          <div class="questionTitleContainer">
            <label>Question <%= i %></label>
            <input type="text" name="question_<%= i %>" placeholder="Enter Question">
          </div>
          <div class="answersContainer">
          <% for (let j = 1; j <= 4; j++ ) { %>
            <div class="eachAnswer">
              <input type="checkbox" name="cb_<%= i %><%= j %>">
              <input type="text" name="as_<%= i %><%= j %>" placeholder="Answer <%= j %>">
            </div>

            <% } %>
          </div>
        <% }; %>
      <div class="createButton">
        <button type="submit" class="Create">Create</button>
      </div>
    </form>
  </div>
</body>

</html>
